{
  "manifest_version": 3,
  "name": "Email/Password Autofill Blocker",
  "version": "1.1.0",
  "description": "Blocks browser autofill on login fields only. Let your password manager work in peace.",
  "author": "Lycaon Solutions",
  "homepage_url": "https://lycaon.solutions",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon128.png",
      "48": "icons/icon128.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "email-autofill-blocker@lycaonsolutions.com"
    },
    "gecko_android": {
      "id": "email-autofill-blocker@lycaonsolutions.com"
    }
  }
}
